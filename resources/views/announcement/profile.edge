<script>
var page_actuel = 1;
var max_page = 5;
var objJson;
var xhr = new XMLHttpRequest();
//pour r√©cuperer tout les messages d'une annonce
xhr.open('GET', '/announcement/{{id}}/messages'); 
                        xhr.onload = function() {
                            if (xhr.status === 200) {
                            
                               let value = JSON.parse(xhr.responseText);
                                objJson = value.valeur;
                                changePage(1);
                            }
                            else {
                                alert('Request failed.  Returned status of ' + xhr.status);
                            }
                        };
                        xhr.send();

//acceder √† la page pr√©cedente                      
function prevPage()
{
    if (page_actuel > 1) {
        page_actuel--;
        changePage(page_actuel);
    }
}
function nextPage()
{
    if (page_actuel < numPages()) {
        page_actuel++;
        changePage(page_actuel);
    }
}

function changePage(page)
{
    var btn_next = document.getElementById("btn_next");
    var btn_prev = document.getElementById("btn_prev");
    var listing_table = document.getElementById("listingTable");
    var page_span = document.getElementById("page");

    var user_announcement_creator_id= {{announcement.id}};
    if (page < 1) page = 1;
    if (page > numPages()) page = numPages();

    listing_table.innerHTML = "";

    for (var i = (page-1) * max_page; i < (page * max_page); i++) {
        listing_table.innerHTML += '<div class="row message-container" id="div-message-'+objJson[i].id_message+'" style="padding-bottom:20px;">'+
'        <div class="col-2"></div>'+
'        <div class="col-8">'+
'            <div class="message-div" style="background:{{announcement.color}}">'+
'                    <a class="message-username" href="/user/'+objJson[i].user_id+'"><p> <img class="message-username-img" src="/img/icon.png" />'+((objJson[i].admin == 1) ? '<span> üëë </span>' : "")+objJson[i].username+((user_announcement_creator_id == objJson[i].user_id) ? '<span> ‚≠ê </span>' : "")+'</p></a>'+
'                    <div class="message-msg"><p>'+objJson[i].name_message+'</p></div>'+                
'                    <p class="message-note">'+
'                            <a onClick="decrementValueM('+objJson[i].id_message+')"><i class="fas fa-minus-square message-note-el"></i></a>'+
'                            <span class="message-note-el" id="'+objJson[i].id_message+'_message">'+objJson[i].note+'</span>'+
'                            <a onClick="incrementValueM('+objJson[i].id_message+')"><i class="fas fa-plus-square message-note-el"></i></a></p>'+
'                            <div class="message-date">'+
'                                    '+objJson[i].created_at+
'                                </div>     '+
'            </div>'+
'        </div>'+
'        <div class="col-2"></div>'+
''+
'    </div>';

    }
    page_span.innerHTML = page;

    if (page == 1) {
        btn_prev.disabled = true;
    } else {
        btn_prev.disabled = false;;
    }

    if (page == numPages()) {
        btn_next.disabled = true;
    } else {
        btn_next.disabled = false;
    }
}

function numPages()
{
    return Math.ceil(objJson.length / max_page);
}

</script>


